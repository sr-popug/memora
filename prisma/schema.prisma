generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(uuid())
  name         String
  email        String  @unique
  hashPassword String
  themes       Theme[]
}

model Theme {
  id           String  @id @default(uuid())
  name         String
  position     Int
  hashPassword String
  User         User?   @relation(fields: [userId], references: [id])
  userId       String?
  blocks       Block[]
  edges        Edge[]
}

model Block {
  id        String  @id @default(uuid())
  positionX Int
  positionY Int
  content   String
  image     String?
  link      String?
  type      String
  Theme     Theme?  @relation(fields: [themeId], references: [id])
  themeId   String?
}

model Edge {
  id   String @id @default(uuid())
  from String
  to   String

  Theme   Theme?  @relation(fields: [themeId], references: [id])
  themeId String?
}

enum TypesOfBlock {
  text
  table
}
